{% extends 'admin/base.html.twig' %}

{% block title %}Les catégories{% endblock %}

{% block body %}
    <h1>Les catégories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Numéro</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ category.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_category_index') }}">retour à la liste</a>

    <a href="{{ path('admin_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('admin/category/_delete_form.html.twig') }}
{% endblock %}
